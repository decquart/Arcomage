@page
@model LoginModel
@{
    ViewData["Title"] = "Login Page";
}
<h2>Login</h2>


<form method="post">
    <div class="validation" asp-validation-summary="All" >
        <div>
            <div class="form-group">
                <label asp-for="LogModel.Email">Email</label> <br />
                <input type="text" asp-for="LogModel.Email" />
                <span asp-validation-for="LogModel.Email" />
            </div>
            <div class="form-group">
                <label asp-for="LogModel.Password">Password</label> <br />
                <input asp-for="LogModel.Password" />
                <span asp-validation-for="LogModel.Password" />
            </div>
            <div class="form-group">
                <input type="submit" value="Log in" class="btn" />
            </div>
        </div>
    </div>
</form>